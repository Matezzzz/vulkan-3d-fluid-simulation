{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "CompileProject",
            "command": "mingw32-make",
            "args": [
                "all"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "Build and run",
            "dependsOn": [
                "CompileProject"
            ],
            "command": "${workspaceFolder}\\fluid_sim.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
        
    ]
}