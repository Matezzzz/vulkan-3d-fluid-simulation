{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Compile shaders",
            "command": "python",
            "args": [
                "build_shaders.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\shaders_fluid"
            }
        },
        {
            "type": "shell",
            "label": "Compile all",
            "dependsOn":[ 
                "Compile shaders"
            ],
            "command": "g++",
            "args": [
                "-std=c++17",
                "main.cpp",
                "-L${workspaceFolder}\\just-a-vulkan-library",
                "-LC:/Program Files/MSYS2/mingw64/x86_64-w64-mingw32/lib",
                "-lJAVL", "-lglfw3dll",
                "-o", "fluid_sim.exe"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "Build and run",
            "dependsOn": [
                "Compile all"
            ],
            "command": "${workspaceFolder}\\fluid_sim.exe",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
        
    ]
}